---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import { Image } from '@astrojs/image/components';
import maelImage from '../assets/Mael.png';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="/placeholder-social.png" />
	</head>
	<body class="flex h-screen items-center max-w-6xl m-auto bg-slate-900 space-x-20 justify-center">
		<div class="space-y-10">
			<div class="bg-blue-600 p-2 rounded-md inline-block text-slate-50 font-bold">👋 Hi There! I'm Mael</div>
			<h1 class="text-5xl text-slate-50 font-bold">A 🇫🇷 french student enrolled in an engineering degree in computer science.</h1>
			<div class="space-x-4">
				<p class="text-slate-50 text-xl">I love learning and seek out new challenges. If it's software, websites, or problem-solving, I'm ready to help make your project a success.</p>
				<!-- <a class="text-slate-50 uppercase font-bold hover:text-blue-600" href="/about">🧑‍💻 About</a> -->
				<!-- <a class="text-slate-50 uppercase font-bold hover:text-blue-600" href="/projects">📃 Projects</a> -->
			</div>
		</div>
		<Image format="webp" aspectRatio="1393:1549" width="300" fit="contain" src={maelImage} alt="Mael"></Image>
	</body>
</html>
